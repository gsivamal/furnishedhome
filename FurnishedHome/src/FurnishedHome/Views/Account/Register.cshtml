@model FurnishedHome.ViewModels.RegisterModel

<h2>Регистрация</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div class="container col-md-6 col-md-offset-3">
        <div class="form-group">
            <label asp-for="Email" class="control-label">Введите Email</label><br />
            <input class="form-control" type="text" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div class="form-group">
            <label asp-for="Password" class="control-label">Введите пароль</label><br />
            <input class="form-control" asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword" class="control-label">Повторите пароль</label><br />
            <input class="form-control" asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div class="form-group">
            <input class="form-control" type="submit" value="Регистрация" />
        </div>
    </div>
</form>