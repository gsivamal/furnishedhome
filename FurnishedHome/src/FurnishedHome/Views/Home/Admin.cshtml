@section Scripts
{
    <script type='text/javascript' src='http://www.bing.com/api/maps/mapcontrol?branch=experimental&callback=loadMapScenario' async defer></script>
}
<div ng-app="app">
    <div id="controller" ng-controller="PropertyController">
        <form class="form-horizontal">
            <div class="col-md-2">
                <label>Address</label>
                <input type="text" class="form-control" />
            </div>
            <div class="col-md-2">
                <label>Price</label>
                <input type="text" class="form-control" />
            </div>
            <div class="col-md-2">
                <label>Area</label>
                <input type="text" class="form-control" />
            </div>
            <div class="col-md-2">
                <label>Zipcode</label>
                <input type="text" ng-model="zipcode" class="form-control" />
            </div>
            <div class="togglebutton">
                <label>
                    Bedrooms
                    <input type="checkbox" />
                </label>
            </div>
            <div class="togglebutton">
                <label>
                    Bathrooms
                    <input type="checkbox" />
                </label>
            </div>
            <div class="togglebutton">
                <label>
                    Furnished
                    <input type="checkbox" />
                </label>
            </div>
            <div class="togglebutton">
                <label>
                    Pets
                    <input type="checkbox" />
                </label>
            </div>
            <div class="togglebutton">
                <label>
                    Smoking
                    <input type="checkbox" />
                </label>
            </div>
            <button class="btn" ng-click="addmarker()">Add Marker</button>
        </form>
        <div id='bingMap' style="position:relative;width:100%;height:500px;"></div>
    </div>
</div>
