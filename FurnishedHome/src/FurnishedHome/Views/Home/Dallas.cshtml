@{
    ViewData["Title"] = "Home Page";
}
@section Scripts
{
    <script type='text/javascript' src='http://www.bing.com/api/maps/mapcontrol?branch=experimental&callback=loadMapScenario' async defer></script>
}
<html ng-app="app">
<head>
    <title>loadMapAsyncHTML</title>
    <meta http-equiv='Content-Type' content='text/html; charset=utf-8' />
</head>
<body ng-controller="PropertyController">
    <section id="map">
        <div class="container">
            <div class="row">
                <h3>Dallas Furnished Homes</h3>
                <div id='bingMap' style="position:relative;width:100%;height:500px;"></div>
            </div>
        </div>
    </section>
    <section id="properties">
        <div class="container">
            <div class="row">
                <h3>Dallas Furnished Homes</h3>
                <div ng-repeat="property in properties" class="col-md-6">
                    <img src="~/images/{{property.id}}_primary.jpg" style="width:100%; height:400px; padding:5px;" />
                    <div class="row" style="padding:5px;">
                        {{property.bedrooms}} Bed rooms
                        <span style="position:absolute; z-index:1; right:15px;">${{property.price}} / mon</span> 
                    </div>
                    <div class="row" style="padding:5px;">
                        Wonderful
                    </div>
                    <div class="row" style="padding:5px;">
                        <a href="/Home/property/{{property.id}}">More info</a>
                        <a class="btn btn-default" href="/Book/{{property.id}}" style="position:absolute; z-index:1; right:15px; bottom:5px;">
                            <i class="fa fa-check-square-o" aria-hidden="true"></i>
                            Book Now
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
