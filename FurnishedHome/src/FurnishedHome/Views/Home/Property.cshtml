@model long
@section Scripts
{
    <script src="~/lib/angular/angular.min.js"></script>
    <script src="~/js/PropertyController.js"></script>
    <script type='text/javascript' src='http://www.bing.com/api/maps/mapcontrol?branch=experimental&callback=showMap' async defer></script>
}
<html ng-app="app">
<head>
    <title>loadMapAsyncHTML</title>
    <meta http-equiv='Content-Type' content='text/html; charset=utf-8' />
</head>
<body ng-controller="PropertyController" ng-init="init(@Model)" ng-model="property">
    <div ng-show="{{property}}">
        <section id="images">
            <div class="container">
                <div class="row">
                    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="5000">
                        <ol class="carousel-indicators">
                            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                            <li data-target="#myCarousel" data-slide-to="1"></li>
                        </ol>
                        <div class="carousel-inner" role="listbox">
                            <div class="item active">
                                <img style="width:100%;" src="~/images/{{property.id}}_primary.jpg" class="img-responsive" />
                            </div>
                        </div>
                        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
        </section>

        <section id="properties">
            <div class="container">
                <div class="row">
                    <table class="table table-responsive">
                        <thead>
                            Features
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    Bathrooms {{property.bathrooms}}
                                </td>
                                <td>
                                    Area {{property.area}}
                                </td>
                                <td>
                                    Zip code {{property.zipcode}}
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Bedrooms {{property.bedrooms}}
                                </td>
                                <td>
                                    <div ng-show="!{{property.pets}}">Pets No</div>
                                    <div ng-show="{{property.pets}}">Pets Yes</div>
                                </td>
                                <td>
                                    Rent:${{property.price}}
                                    <select>
                                        <option ng-repeat="rent in property.rents" value="rent.id">{{rent.term}}</option>
                                    </select>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div ng-show="!{{property.furnished}}">Furnished No</div>
                                    <div ng-show="{{property.furnished}}">Furnished Yes</div>
                                </td>
                                <td>
                                    <div ng-show="!{{property.smoking}}">Smoking No</div>
                                    <div ng-show="{{property.smoking}}">Smoking Yes</div>
                                </td>
                                <td>
                                    <a href="/Book/{{property.id}}">Book Now</a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </section>

        <section id="map">
            <div class="container">
                <div id='bingMap' style="position:relative;width:100%;height:500px;"></div>
            </div>
        </section>
    </div>
</body>
</html>
